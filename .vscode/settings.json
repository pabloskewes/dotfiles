{
  "workbench.colorTheme": "Darcula",

  "[python]": {
    "editor.formatOnType": true,
    "editor.defaultFormatter": "ms-python.black-formatter",
    "editor.formatOnSave": true
  },

  "explorer.confirmDragAndDrop": false,

  "editor.inlineSuggest.enabled": true,
  "github.copilot.enable": {
    "*": true,
    "plaintext": true,
    "markdown": true,
    "scminput": false,
    "yaml": true
  },
  "github.copilot.advanced": {},
  "github.copilot.editor.enableAutoCompletions": true,
  "github.copilot.preferredAccount": "pabloskewes",

  "excalidraw.theme": "dark",

  "terminal.integrated.enableMultiLinePasteWarning": "never",

  "files.associations": {
    "**/.ssh/config": "plaintext",
    "*.excalidraw": "json",
    "*.excalidrawlib": "json",
    "*.rmd": "markdown"
  },

  "cmake.configureOnOpen": true,

  "jupyter.askForKernelRestart": false,
  "liveshare.notebooks.allowGuestExecuteCells": true,

  "workbench.editorAssociations": {
    "*.copilotmd": "vscode.markdown.preview.editor",
    "{git,gitlens}:/**/*.{md,csv}": "default",
    "*.md": "default"
  },

  "editor.wordWrap": "on",

  "[typescript]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode",
    "editor.formatOnSave": true
  },

  "[json]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode",
    "editor.formatOnSave": true
  },

  "markdown.extension.toc.updateOnSave": false,
  "git.enableSmartCommit": true,
  "git.confirmSync": false,

  "editor.formatOnSave": true,

  "[typst]": {
    "editor.formatOnSave": true,
    "editor.wordSeparators": "`~!@#$%^&*()=+[{]}\\|;:'\",.<>/?"
  },
  "tinymist.formatterMode": "typstyle",

  "pylint.args": [
    "--disable=W1203", // Use lazy % formatting in logging functions
    "--disable=C0115", // Missing class docstring
    "--disable=C0116", // Missing function or method docstring
    "--disable=C0114" // Missing module docstring
  ],
  "cmake.options.statusBarVisibility": "icon",
  "cmake.pinnedCommands": [
    "workbench.action.tasks.configureTaskRunner",
    "workbench.action.tasks.runTask"
  ],

  "[c]": {
    "editor.defaultFormatter": "ms-vscode.cpptools"
  },
  "[cpp]": {
    "editor.defaultFormatter": "ms-vscode.cpptools"
  },
  "cmake.showOptionsMovedNotification": false,
  "makefile.configureOnOpen": true,
  "[typst-code]": {
    "editor.wordSeparators": "`~!@#$%^&*()=+[{]}\\|;:'\",.<>/?"
  },
  "[markdown]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[plaintext]": {
    "editor.formatOnSave": false,
    "editor.formatOnType": false,
    "editor.defaultFormatter": null
  },
  "[dotenv]": {
    "editor.defaultFormatter": "foxundermoon.shell-format"
  },
  "[javascript]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "cursor.composer.shouldChimeAfterChatFinishes": true,
  "[dockerfile]": {
    "editor.defaultFormatter": null,
    "editor.formatOnSave": false
  },
  "prettier.disableLanguages": ["dockerfile"],
  "cursor.general.globalCursorIgnoreList": [
    "",
    "",
    "**/credentials.json",
    "**/credentials.*.json",
    "**/secret.json",
    "**/secrets.json",
    "**/*.key",
    "**/*.pem",
    "**/*.pfx",
    "**/*.p12",
    "**/*.crt",
    "**/*.cer",
    "**/id_rsa",
    "**/id_dsa",
    "**/.ssh/id_*"
  ],
  "cursor.cpp.enablePartialAccepts": true
}
